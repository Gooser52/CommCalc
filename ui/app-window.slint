import { Button, VerticalBox, LineEdit } from "std-widgets.slint";

export component AppWindow inherits Window {
    in-out property <string> display-text: "";
    callback show-billings(string);
    
    title: "Commission Calculator";
    background: #313e50;
    
    GridLayout {
        padding: 50px;
        spacing: 25px;
        
        Row {
            Text {
                text: "Enter billings";
                horizontal-alignment: center;
                font-size: 24px;
                font-weight: 900;
                color: white;
            }
        }
        
        Row {
            billings := LineEdit {
                horizontal-alignment: center;
                font-size: 16px;
                placeholder-text: "Enter your number";
                height: 35px;
            }
        }
        
        Row {
            Button {
                text: "Calculate";
                primary: true;
                height: 35px;
                clicked => { show-billings(billings.text) }
            }
        }
        
        Row {
            VerticalBox {
                Rectangle {
                    height: 150px;  // Increased height
                    width: 350px;   // Fixed width to prevent stretching
                    background: #f2f2f2;
                    border-radius: 8px;
                    
                    Text {
                        color: black;
                        font-size: 14px;  // Slightly increased for better readability
                        font-weight: 600;  // Made bolder
                        text: root.display-text;
                        wrap: word-wrap;
                        vertical-alignment: top;
                        horizontal-alignment: left;
                        x: 20px;  // Position text inside rectangle
                        y: 20px;  // Position text inside rectangle
                        width: parent.width - 40px;  // Leave margin on both sides
                        height: parent.height - 40px;  // Leave margin on top and bottom
                    }
                }
            }
        }
    }
}